<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundLayers"
        android:layout_width="411dp"
        android:layout_height="384dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/title_initialScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_layers" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_circular" />

    <TextView
        android:id="@+id/title_initialScreen"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="455dp"
        android:fontFamily="@font/jaldi_bold"
        android:text="@string/title_welcome"
        android:textColor="#000000"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/subtitle_initialScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/jaldi"
        android:text="@string/subtitle_initialScreen"
        android:textColor="#6C6C6C"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_initialScreen" />

    <ImageView
        android:id="@+id/buttonSignUp"
        android:layout_width="269dp"
        android:layout_height="55dp"
        android:layout_marginTop="55dp"
        android:onClick="viewSignUpPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_initialScreen"
        app:srcCompat="@drawable/button_sign_up" />

    <ImageView
        android:id="@+id/buttonLogIn"
        android:layout_width="303dp"
        android:layout_height="56dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="36dp"
        android:onClick="viewLogInPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignUp"
        app:srcCompat="@drawable/button_login" />

</androidx.constraintlayout.widget.ConstraintLayout>

